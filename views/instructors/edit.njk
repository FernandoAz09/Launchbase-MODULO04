{% extends "layout.njk" %}    {# extendendo a formatação e estilização do layout para index #}

{% block content %}
                        {# HTML só aceita os verbos GET e POST #}
<form class="card" method="POST" action="/instructors?_method=PUT"> {# SOBREESCREVENDO O MÉTODO e TROCANDO O VERBO DE POST PARA PUT#}
    <section 
    
    class="avatar" 
    style="background: url(https://source.unsplash.com/collection/19035194/500x500) no-repeat  center / cover">
    {# estilizando a bkgd img [no-repeat(não repetindo) center/cover (centralizada e cobrindo todo o box)] #}
    {# Consumindo a API do unsplash para mudar as fotos da página #}
    </section>
    
    <section class="details">

        <h3>Editar Instrutor</h3>

     {% include "instructors/fields.njk" %} {#  Inclui arquivo externo dinâmicamente  #}

        <input 
            type="hidden" 
            name="id" 
            value="{{ instructor.id }}"> {# INPUT escondido para que o servidor encontre o ID #}

    </section>
</form>

{% endblock content %}
